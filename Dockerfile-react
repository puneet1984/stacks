# Use the official Node.js image
FROM node:18-alpine

# Set the working directory inside the container
WORKDIR /usr/src/app

# Install global dependencies (e.g., web-vitals)
RUN npm install -g web-vitals serve

# Install React dependencies if a package.json exists
COPY package*.json ./
RUN if [ -f package.json ]; then npm install; fi

# Expose port 3000 for the React development server
EXPOSE 3000

# Default command (to be overridden per app)
CMD ["npm", "start"]
